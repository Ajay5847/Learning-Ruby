<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @friend.phone %></li>
    <li class="list-group-item"><%= @friend.email %></li>
    <li class="list-group-item"><%= @friend.twitter %></li>
  </ul>
  <div class="card-body card-align">
	<%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-primary" %>
	<%= link_to "Back", friends_path, class: "btn btn-dark" %>
	</div>
	<div class="card-footer card-footer-align">
	<%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger" %>
  </div>
</div>